<div aria-hidden="true" aria-labelledby="myLargeModalLabel" class="modal fade gallery-modal-fullscreen" role="dialog" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <div class="carousel slide" data-interval="false" data-ride="carousel" id="image-gallery-carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          {{#each images.all}}
          {{#if @first}}
          <div class="item active">
          {{else}}
          <div class="item">
          {{/if}}
            {{> partials/gallery/gallery-item}}
          </div>
        {{/each}}
        </div><!-- Controls -->
        <a class="left carousel-control" data-slide="prev" href="#image-gallery-carousel" role="button"><span class="glyphicon glyphicon-chevron-left"></span></a>
        <a class="right carousel-control" data-slide="next" href="#image-gallery-carousel" role="button"><span class="glyphicon glyphicon-chevron-right"></span></a>
      </div>
    </div>
  </div>
</div>
