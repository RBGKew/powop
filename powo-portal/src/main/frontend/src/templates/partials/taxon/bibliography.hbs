<div id="bibliography-citations">
  {{#with bibliography.accepted}}
  <h3>Accepted by</h3>
  <ul>
    {{#each this}}
    <li id="{{identifier}}" class="offset bibliographic-citation">{{{bibliographicCitation}}}</li>
    {{/each}}
  </ul>
  {{/with}}

  {{#with bibliography.notAccepted}}
  <h3>Not accepted by</h3>
  <ul>
    {{#each this}}
    <li id="{{identifier}}" class="offset bibliographic-citation">{{{bibliographicCitation}}}{{#if taxonRemarks}} [{{taxonRemarks}}]{{/if}}</li>
    {{/each}}
  </ul>
  {{/with}}

  {{#with bibliography.liturature}}
  <h3>Literature</h3>
  {{#each this}}
  <h4>{{@key}}</h4>
  <ul>
    {{#each this}}
    <li id="{{identifier}}" class="offset bibliographic-citation">{{{bibliographicCitation}}}</li>
    {{/each}}
  </ul>
  {{/each}}
  {{/with}}
</div>
