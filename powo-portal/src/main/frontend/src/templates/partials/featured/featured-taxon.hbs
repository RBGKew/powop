<a class="featured-taxon" href="/taxon/{{ taxon.identifier }}">
  <div class="featured-taxon__image-container">
    {{#if featuredImage}}
      <img class="featured-taxon__image" src="{{imageToThumbnailUrl featuredImage}}" alt="">
    {{else}}
      <div class="featured-taxon__image-placeholder"></div>
    {{/if}}
  </div>
  <div class="featured-taxon__rank">{{taxon.taxonRank}}</div>
  <div class="featured-taxon__name">{{taxon.scientificName}} {{taxon.scientificNameAuthorship}}</div>
  <div class="featured-taxon__summary">
    {{{summary}}}
  </div>
</a>