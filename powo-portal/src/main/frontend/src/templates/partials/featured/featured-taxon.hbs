<a href="/taxon/{{ taxon.identifier }}">
  <div class="featured-taxon__image">
    {{#if featuredImage}}
      <img class="photo" src="{{imageToThumbnailUrl featuredImage}}">
    {{else}}
      <div class="photo-placeholder"></div>
    {{/if}}
  </div>
  <div class="featured-taxon__rank">{{taxon.taxonRank}}</div>
  <div class="featured-taxon__name">{{taxon.scientificName}} {{taxon.scientificNameAuthorship}}</div>
  <div class="featured-taxon__summary">
    {{{summary}}}
  </div>
</a>