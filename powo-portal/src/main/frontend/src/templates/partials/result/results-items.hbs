<div class="container container--lines">
  <div class="grid grid--lines grid--equal-heights">
    {{#each results}}
    <article class="c-card {{color-theme this}}">
      <a href="{{url}}">
        <div class="c-card__content">
          <span class="c-card__type">
            <svg class="results-kingdom" xmlns:xlink="http://www.w3.org/1999/xlink" >
              <use xlink:href="#{{kingdom}}-svg"></use>
            </svg>
            {{rank}}
          </span>
          <h2 class="c-card__title">{{nameAndAuthor this}}</h2>
          <p>
            {{#if synonymOf}}
              <b>Synonym of</b>: {{nameAndAuthor synonymOf}}</br>
            {{/if}}
            {{{snippet}}}
          </p>
        </div>
        {{#if images}}
        <div class="c-gallery-thumbs">
          {{#firstThree images}}
          <figure class="c-gallery-thumbs__img">
            <div class="c-gallery-thumbs__bg">
              {{thumbnailImage this}}
            </div>
          </figure>
          {{/firstThree}}
        </div>
        {{/if}}
      </a>
    </article>
    {{/each}}
  </div>
</div>
