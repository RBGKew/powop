<div class="container">
  {{> results-filters }}

  <div class="navbar navbar-default">
    <div class="total-results inline-block hidden">
      {{> results-count }}
    </div>

    <div class="loading inline-block">
      <div class="spinner">
        <div class="bounce1"></div>
        <div class="bounce2"></div>
        <div class="bounce3"></div>
      </div>
    </div>

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#results-header-filters" aria-expanded="false" aria-controls="results-header-filters">
        <span class="sr-only">Filter menu</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div id="results-header-filters" class="search-bar navbar-right collapse navbar-collapse">
      {{> results-filters }}
      <ul class="nav navbar-nav">
        <li class="dropdown sort-menu">
          <button class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Sort by <span class="caret"></span></button>
          <ul id="sort_dropdown" class="dropdown-menu">
            <li><a role="button" id="relevance" class="sort_options {{selected sort "relevance"}}" href="#">Sort by relevance</a></li>
            <li><a role="button" id="name_asc" class="sort_options {{selected sort "name_asc"}}" href="#">Sort A-Z</a></li>
            <li><a role="button" id="name_desc"  class="sort_options {{selected sort "name_desc"}}" href="#">Sort Z-A</a></li>
          </ul>
        </li>
        <li class="layout-toggle">
          <div class="btn-group" role="group" aria-label="...">
            <button type="button" id="grid_view" aria-label="grid view" class="btn btn-default navbar-btn js-show-grid search_view {{selected layout "grid"}}" >
              <span class="glyphicon glyphicon-th" aria-hidden="true">
            </button>
            <button type="button" id="list_view" aria-label="list view" class="btn btn-default navbar-btn js-show-list search_view {{selected layout "list"}}" >
              <span class="glyphicon glyphicon-th-list" aria-hidden="true">
            </button>
          </div>
        </li>
      </ul>
      <p class="sr-only js-view-mode" aria-live="polite">Viewing in grid mode</p>
    </div><!-- /.navbar-collapse -->
  </div>
</div>
