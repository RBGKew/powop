{{> partials/header }}
<div id="svgs" style="display:none">
  {{> svg/leaf.svg }}
  {{> svg/mushroom.svg }}
  {{> svg/chevron.svg }}
  {{> (concat "svg/" siteId ".svg")}}
</div>
<div class="s-page s-page--home s-search__fullpage s-theme-home {{concat " s-" siteId}} invisible">
  <div class="s-page-wrapper">
    {{> partials/page-header}}

    <div class="c-search autocomplete-form">
      <div class="container">

        <div class="c-intro">
          {{> (concat "partials/intro/" siteId) }}
        </div>
        <main id="main" class="front-page" tabindex="-1">
          {{> partials/search/search-box }}
        </main>
        <nav class="form-inline--search form-links">
          {{#if cross-site-link.present}}
          <a class="form-link" href="{{cross-site-link.value.href}}">{{cross-site-link.value.text}}</a>
          <span class="divider">|</span>
          {{/if}}
          <a class="form-link" href="/about">{{{message "footer_about"}}}</a>
          <span class="divider">|</span>
          <a class="form-link" href="/search-help">{{{message "footer_help"}}}</a>
        </nav>
        <div class="featured-taxa-sections">
          {{#each featured-taxa-sections}}
          <h2>{{title}}</h2>
          <div class="row">
            {{#each featuredTaxa}}
            <div class="col-12 col-md-4">
              {{> partials/featured-taxon }}
            </div>
            {{/each}}
          </div>
          {{/each}}
        </div>
      </div><!-- End Container -->
    </div>
    {{> partials/footer-links}}
  </div>
</div>
<script>
  window.siteData = {
    basePageTitle: "{{ title }}"
  }
</script>
{{> partials/footer initialize="search"}}