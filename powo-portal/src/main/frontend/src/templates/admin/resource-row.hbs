<tr>
  <div class="resource-row" id="{{identifier}}">
    <div class="row">
      <div class="col col-md-2">
        {{resource.title}}
      </div>
      <div class="col col-md-4">
        {{resource.url}}
      </div>
      <div class="col col-md-2">
        {{resource.type}}
      </div>
      <div class="col col-md-2">
        <button class="dropdown btn btn-primary">Edit</button>
        <button class="harvest btn btn-primary">Harvest</button>
      </div>
    </div>
      <div class="form-group form-inline form-dropdown hidden">
          <div class = "row">
            <div class = "col col-md-3">
                <label for="title">Tile:</label>
                <input type="text" class="form-control" name="title" value="{{title}}">
            </div>
            <div class="col col-md-6">
                <label for="url">Url:</label>
                <input type="url" class="form-control long-form" name="url" value="{{uri}}" >
            </div>
          </div>
          <div class ="row">
            <div class="col col-md-3">
            <label for="data_type">Data Type: </label>
             <select class="form-control" name="jobType">
               <option>Standard</option>
               <option>Harvest Names</option>
               <option>Harvest Taxonomy</option>
             </select>
            </div>
            <div class="col col-md-6">
              <label for="prefix">Prefix:</label>
              <input type="url" class="form-control long-form" name="prefix" value="" >
            </div>
        </div>
      </div>
      <div class ="row">
        <div class="col col-md-3">
          <button class="save btn btn-default">Save</button>
      </div>
    </div>
  </div>
</tr>
