<h2 class="page-header">Jobs</h2>
<div id="jobs" class="panel-group" role="tablist" aria-multiselectable="true">
  {{#each results}}
  <div class="panel {{panel-status jobStatus jobExitCode}}" data-job-configuration-id="{{id}}">
    <div class="panel-heading">
      <h3 class="panel-title">
        <a role="button" class="collapsed" data-toggle="collapse" data-parent="#job-lists" href="#job-configuration-{{id}}">{{description}}</a>
        <div class="pull-right">
          <span class="badge">{{job-status jobStatus jobExitCode}}</span>
          <button class="btn btn-xs btn-success run-job">Run</button>
        </div>
      </h3>
    </div>

    <div id="job-configuration-{{id}}" class="panel-collapse collapse" role="tabpanel">
      <div class="panel-body">
        <table class="table job-parameters">
          <caption>Job Parameters</caption>
          <thead>
            <tr>
              <th>Name</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
            {{#each parameters}}
            <tr>
              <td>{{@key}}</td>
              <td>{{this}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  {{/each}}
</div>
